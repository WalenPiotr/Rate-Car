    <div class="container">
        <h1 style="text-align : center;">Edit comment</h1>
            <form action="/cars/<%= car_id %>/comments/<%= comment._id %>/?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[title]" value="<%= comment.title %>">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
        </div>
    </div>
