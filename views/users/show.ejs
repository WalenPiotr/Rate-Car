<% include ../partials/header %>

<div class="container">
    <h1><%= user.username %></h1>
    <div class="thumbnail">
    </div>
    <h3> User comments: </h3>
    <% comments.forEach(function(comment){%>
    <div class="list-group">
    <a href="/cars/<%= comment.car._id %>" class="list-group-item list-group-item-action flex-column align-items-start">
            <div>
                <h5><%= comment.car.brand%> - <%= comment.car.model%></h5>
                <p class="mb-1"><p><%= comment.text %></p></p>
            </div>
    
            <div class="d-flex w-100 justify-content-between">
                <small> <%= comment.createdAt %></small>
            </div>
        </a>
    </div>
    <% }); %>

</div>

<% include ../partials/footer %>