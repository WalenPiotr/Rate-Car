<% include ../partials/header.ejs %>
<div class="container">
<h1>Edit <%= car.brand %> - <%= car.model %></h1>
<div>
    <form action="/cars/<%= car._id %>/?_method=PUT" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" name="car[brand]" value="<%= car.brand %>">
            <input class="form-control" type="text" name="car[model]" value="<%= car.model %>">
            <input class="form-control" type="text" name="car[description]" value="<%= car.description %>">
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit!</button>
        </div>
    </form>
</div>
</div>
<% include ../partials/footer.ejs %>
