<% include ../partials/header.ejs %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <p>Please select car model you are interested in!</p>
            <form action= "#" method="POST">
                <button class="btn btn-danger">Delete Current Brand</button>
            </form>
            <a class="btn btn-primary" href="#">Add New Model</a>
        </div>
    </header>
    <form class="input-group mb-3" action="/cars" method="GET">
        <input name="search" type="text" class="form-control" placeholder="Search model" aria-label="Search model" aria-describedby="basic-addon2">
        <div class="input-group-append">
            <input type="submit" class="btn btn-outline-secondary" value="Search">
        </div>
    </form>
    <ul class="list-group">
    <% cars.forEach(car => { %>
    <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
        <%= car.model %>
        <span class="badge badge-primary badge-pill">-1</span>
    </a>
    <% }); %>

</div>

<% include ../partials/footer.ejs %>