<% include ../partials/header.ejs %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1><%= brand.name %></h1>
            <p>Please select car model you are interested in!</p>
            <a class="btn btn-primary" href="/brands/<%= brand._id %>/new">Add New Model</a>


        </div>
    </header>
    <form class="input-group mb-3" action="/brands/<%= brand._id %>/models" method="GET">
        <input name="search" type="text" class="form-control" placeholder="Search brand" aria-label="Search brand" aria-describedby="basic-addon2">
        <div class="input-group-append">
            <input type="submit" class="btn btn-outline-secondary" value="Search">
        </div>
    </form>
    <ul class="list-group">
    <% brand.models.forEach(model => { %>
    <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
        <%= model.name %>
        <span class="badge badge-primary badge-pill">-1</span>
    </a>
    <% }); %>

</div>

<% include ../partials/footer.ejs %>